{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnvironmentOptions": {
    "IsLive": false
  },
  "LoggingOptions": {
    "DefaultLogName": "middleware_log",
    "LogFolder": "mfi_middleware"
  },
  "DatabaseProviderOptions": {
    "Provider": "SqlServer",
    "MinimumVersionForApproximateCount": "2012",
    "ForceVersionCheck": false,
    "VersionCheckCacheTime": "00:30:00"
  },

  //"DatabaseProviderOptions": {
  //  "Provider": "MySQL",
  //  "MinimumVersionForApproximateCount": "5.7"
  //},

  //"DatabaseProviderOptions": {
  //  "Provider": "Oracle",
  //  "MinimumVersionForApproximateCount": "10"
  //},

  //"DatabaseProviderOptions": {
  //  "Provider": "SQLite",
  //  "MinimumVersionForApproximateCount": "3.0"
  //}
  "ConnectionOptions": {
    "DefaultConnection": "MFI_DBCONNECTION_ENV"
  },
  "UrlOptions": {
    "MiddlewareBaseUrl": "https://localhost:7421"
  },
  "Pagination": {
    "EnableApproximateCount": true,
    "ApproximateCountThreshold": 100000,
    "MaxApproximateCountErrorPercent": 5.0,
    "ApproximateCountCacheTime": "00:30:00",
    "EntityConfigurations": {
      "Product": {
        "UseApproximateCount": true,
        "ApproximateCountThreshold": 50000,
        "EstimatedRowCount": 1000000
      },
      "AuditLog": {
        "UseApproximateCount": true,
        "ApproximateCountThreshold": 10000,
        "EstimatedRowCount": 5000000
      },
      "User": {
        "UseApproximateCount": false
      }
    }
  }
}
