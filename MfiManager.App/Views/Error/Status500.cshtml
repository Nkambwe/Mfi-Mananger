@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
    var isLive = Model.IsLive;
}

<div class="error-container">
    <h1 class="display-1">@Model.StatusCode - Server Error</h1>

    @if (isLive)
    {
        <!-- Simple error for production -->
        <p>Sorry, something went wrong on our end. Please try again later.</p>
        <a href="/mfi/application/login" class="btn btn-primary">Go to Home</a>
    }
    else
    {
        <!-- Detailed error for development -->
        <div class="alert alert-danger">
            <h3>Development Mode - Error Details</h3>
            <p><strong>Error Message:</strong> @Model.ErrorMessage</p>
            <p><strong>Error Path:</strong> @Model.ErrorPath</p>

            @if (Model.StackTrace != null)
            {
                <hr />
                <h4>Stack Trace:</h4>
                <pre style="text-align: left; background: #f5f5f5; padding: 15px; overflow-x: auto;">@Model.StackTrace</pre>
            }
        </div>
        <a href="/mfi/application/login" class="btn btn-primary">Go to Home</a>
    }
</div>