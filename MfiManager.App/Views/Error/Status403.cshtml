@model ErrorViewModel
@{
    Layout = "_FlatLayout";
    ViewData["Title"] = "Forbidden";
}

<div class="mfi-error-container">

    <div class="mfi-error-box">
        <div class="error-page-header">
            <h1 class="display-1 error-code-danger">@Model.StatusCode</h1>
            <h4 class="display-1 error-code-text-danger">Access Denied!</h4>
        </div>
        <div class="error-page-message">
            <p class="error-line-danger ">@Model.ErrorMessage</p>
            <a href="/mfi/application/login" class="btn btn-primary" style="min-width:350px; height:40px">Go to Home</a>
        </div>
    </div>

</div>
