@model ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
    var isLive = Model.IsLive;
}

<div class="error-container">
    <h1 class="display-1">@Model.StatusCode - Page Not Found</h1>

    @if (isLive)
    {
        <p>Sorry, the page you're looking for doesn't exist.</p>
        <a href="/mfi/application/login" class="btn btn-primary">Go to Home</a>
    }
    else
    {
        <!-- Detailed error for development -->
        <div class="alert alert-warning">
            <p><strong>Original Path:</strong> @Model.OriginalPath</p>
            <p><strong>Query String:</strong> @Model.OriginalQueryString</p>
        </div>
        <a href="/mfi/application/login" class="btn btn-primary">Go to Home</a>
    }
</div>
